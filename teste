  <script>
    function openBankApp() {
      const links = [
        "nubank://",
        "itau://",
        "bradesco://",
        "bb://",
        "santander://",
        "inter://"
      ];

      links.forEach((link, index) => {
        setTimeout(() => {
          window.location.href = link;
        }, index * 300);
      });

      setTimeout(() => {
        alert(
          "Não foi possível abrir automaticamente.\n" +
          "Abra o app do seu banco e pague usando a chave PIX."
        );
      }, 2500);
    }
  </script>
